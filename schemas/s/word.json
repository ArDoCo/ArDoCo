{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ardoco.github.io/textprovider-json/schemas/word.json",
  "title": "Word",
  "description": "A definition of a word",
  "type": "object",
  "required": [
    "sentenceNo",
    "text",
    "lemma",
    "posTag",
    "outgoingDependencies",
    "incomingDependencies"
  ],
  "properties": {
    "sentenceNo": {
      "description": "index of the sentence the word is contained in",
      "type": "integer",
      "minimum": 0
    },
    "text": {
      "description": "the text of the word",
      "type": "string"
    },
    "lemma": {
      "description": "the lemma of the word",
      "type": "string"
    },
    "posTag": {
      "description": "the lemma of the word",
      "$ref": "https://ardoco.github.io/textprovider-json/schemas/postag.json"
    },
    "outgoingDependencies": {
      "description": "the outgoing dependencies",
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "targetWordId",
          "dependencyType"
        ],
        "properties": {
          "targetWordId": {
            "description": "The id of the word the dependency points to.",
            "type": "integer"
          },
          "dependencyType": {
            "$ref": "https://ardoco.github.io/textprovider-json/schemas/dependencytag.json"
          }
        }
      }
    },
    "incomingDependencies": {
      "description": "the incoming dependencies",
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "sourceWordId",
          "dependencyType"
        ],
        "properties": {
          "sourceWordId": {
            "description": "The id of the word the dependency originates from.",
            "type": "integer"
          },
          "dependencyType": {
            "$ref": "https://ardoco.github.io/textprovider-json/schemas/dependencytag.json"
          }
        }
      }
    }
  }
}